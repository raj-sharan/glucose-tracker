
<div class="container-fluid text-center">
<div class="row content">
<div class="col-sm-2 sidenav">
      <p><a data-toggle="tab" href="#home" onclick = 'javascript:$("#report_div").hide()'>Daily Report</a></p>
      <p><a data-toggle="tab" href="#menu1" onclick = 'javascript:$("#report_div").hide()'>Month to Date Report</a></p>
      <p><a data-toggle="tab" href="#menu2" onclick = 'javascript:$("#report_div").hide()'>Monthly Report</a></p>
</div>
<div class="col-sm-10 text-center">
<div class="tab-content">
  <div id="home" class="tab-pane fade in active">
    <div class="jumbotron">

    <h3>Daily Report</h3>Please select date
    <%= form_tag(daily_report_blood_glucose_levels_path,remote: true,:method => :post) do %>
    <input type="date" name="selected_date">
    <%= submit_tag "Report",:class=>"btn btn-info"%>
    <% end %>

    </div>  
  </div>
  <div id="menu1" class="tab-pane fade">
  <div class="jumbotron">
    <h3>Month to Date Report</h3>
      Please select date
      <%= form_tag(month_to_date_report_blood_glucose_levels_path,remote: true,:method => :post) do %>
    <input type="date" name="selected_date">
    <%= submit_tag "Report",:class=>"btn btn-info"%>
    <% end %>  

    </div>
  </div>
  <div id="menu2" class="tab-pane fade">
  <div class="jumbotron">
    <h3>Monthly Report</h3>
    <%= form_tag(monthly_report_blood_glucose_levels_path,remote: true,:method => :post) do %>
    <input type="date" name="selected_date">
    <%= submit_tag "Report",:class=>"btn btn-info"%>
    <% end %> 
    </div>
  </div>
</div>
<div id="report_div"></div> 
 </div>
</div> 
</div>  
